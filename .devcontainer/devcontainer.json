{
	"name": "SplitDumb-api",

	"dockerFile": "../Dockerfile",
	"context": "..",
	"build": {
		"target": "devcontainer"
	},

	"mounts": [
		{
			"source": "/var/run/docker.sock",
			"target": "/var/run/docker.sock",
			"type": "bind"
		}
	],
    
